    @RenderSection("Scripts", required: false)

    <script type="text/javascript">
        function toggleBtnClick() {

            var itemOffUl = document.getElementById('mainmenu');
            if (itemOffUl != null) {
                if (itemOffUl.style.display === "" && itemOffUl.style.flexFlow === "") {

                    itemOffUl.style.display = 'flex';
                    itemOffUl.style.flexFlow = 'column nowrap';
                } else {

                    var w = window.outerWidth;
                    if (w < 1000) {

                        itemOffUl.style.display = 'flex';
                        itemOffUl.style.flexFlow = 'column nowrap';
                    } else {

                        itemOffUl.style.display = "";
                        itemOffUl.style.flexFlow = "";
                    }
                }
            }

            console.log(itemOffUl);
        }

        function resizeWindowBrowse() {
            var w = window.outerWidth;

            if (w > 1000) {
                var itemOffUl = document.getElementById('mainmenu');
                if (itemOffUl != null) {
                    if (itemOffUl.style.display != "") {
                        itemOffUl.style.display = "";

                        itemOffUl.style.flexFlow = "";
                    }
                }

            }
            if (w < 1000) {
                var itemOffUl = document.getElementById('mainmenu');
                if (itemOffUl != null) {
                    if (itemOffUl.style.display != "flex") {
                        itemOffUl.style.display = 'flex';

                        itemOffUl.style.flexFlow = 'column nowrap';
                    }
                }
            }
        }
    </script>

